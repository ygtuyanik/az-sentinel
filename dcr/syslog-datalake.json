{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "dcrName": {
      "type": "string",
      "defaultValue": "DCR-SYSLOG-DATALAKE",
      "metadata": {
        "description": "Name of the Data Collection Rule"
      }
    },
    "logAnalyticsWorkspaceResourceId": {
      "type": "string",
      "metadata": {
        "description": "Resource ID of the Log Analytics workspace"
      }
    },
    "logAnalyticsWorkspaceId": {
      "type": "string",
      "metadata": {
        "description": "Log Analytics workspace ID (GUID)"
      }
    },
    "storageAccountResourceId": {
      "type": "string",
      "metadata": {
        "description": "Resource ID of the ADLS Gen2 storage account (e.g., /subscriptions/{subscriptionId}/resourceGroups/{resourceGroup}/providers/Microsoft.Storage/storageAccounts/{accountName})"
      }
    },
    "storageContainerName": {
      "type": "string",
      "defaultValue": "syslog",
      "metadata": {
        "description": "Container name in the storage account where syslog data will be written"
      }
    },
    "facilityNames": {
      "type": "array",
      "defaultValue": ["*"],
      "metadata": {
        "description": "Syslog facility names to collect. Use [\"*\"] for all facilities."
      }
    },
    "logLevels": {
      "type": "array",
      "defaultValue": ["*"],
      "metadata": {
        "description": "Syslog log levels to collect. Use [\"*\"] for all levels."
      }
    },
    "tags": {
      "type": "object",
      "defaultValue": {
        "createdBy": "Sentinel"
      },
      "metadata": {
        "description": "Tags for the Data Collection Rule"
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Insights/dataCollectionRules",
      "apiVersion": "2024-03-11",
      "name": "[parameters('dcrName')]",
      "location": "[resourceGroup().location]",
      "kind": "Linux",
      "tags": "[parameters('tags')]",
      "properties": {
        "dataSources": {
          "syslog": [
            {
              "streams": ["Microsoft-Syslog"],
              "facilityNames": "[parameters('facilityNames')]",
              "logLevels": "[parameters('logLevels')]",
              "name": "SyslogStream1"
            }
          ]
        },
        "destinations": {
          "logAnalytics": [
            {
              "workspaceResourceId": "[parameters('logAnalyticsWorkspaceResourceId')]",
              "workspaceId": "[parameters('logAnalyticsWorkspaceId')]",
              "name": "DataCollectionEvent"
            }
          ],
          "storageBlobsDirect": [
            {
              "storageAccountResourceId": "[parameters('storageAccountResourceId')]",
              "containerName": "[parameters('storageContainerName')]",
              "name": "DataLakeDestination"
            }
          ]
        },
        "dataFlows": [
          {
            "streams": ["Microsoft-Syslog"],
            "destinations": ["DataCollectionEvent"],
            "transformKql": "source | where ProcessName <> \"CEF\"",
            "outputStream": "Microsoft-Syslog"
          },
          {
            "streams": ["Microsoft-Syslog"],
            "destinations": ["DataLakeDestination"],
            "transformKql": "source | where ProcessName <> \"CEF\"",
            "outputStream": "Microsoft-Syslog"
          }
        ]
      }
    }
  ],
  "outputs": {
    "dcrResourceId": {
      "type": "string",
      "value": "[resourceId('Microsoft.Insights/dataCollectionRules', parameters('dcrName'))]"
    },
    "dcrName": {
      "type": "string",
      "value": "[parameters('dcrName')]"
    },
    "dcrImmutableId": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.Insights/dataCollectionRules', parameters('dcrName'))).immutableId]"
    }
  }
}
